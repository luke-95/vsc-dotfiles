{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "type": "promptString",
            "id": "getModuleName",
            "default": "",
            "description": "name of python module"
        }
    ],
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DJANGO_SETTINGS_MODULE": "conjura.settings.development"
            }
        },
        {
            "name": "Django Management Command",
            "type": "python",
            "request": "launch",
            "console": "internalConsole",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "${fileBasenameNoExtension}",
            ]
        },
        {
            "name": "Debug Django Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "justMyCode": false,
            "args": [
                "start", 
                "--noreload"
            ],
            "console": "internalConsole",
            "django": true,
            "env": {
                "USE_NGROK": "True",
                "AWS_ACCESS_KEY_ID": "",
                "AWS_SECRET_ACCESS_KEY": "",
                "CUSTOMER_WEB_UPLOAD_DEV_ROLE": "arn:aws:iam::849891892665:role/wayflyer-customer-uploads-dev"
            }
        },
        {
            "name": "Debug Workflow Engine",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "run-dev-tasks"
            ],
            "justMyCode": false,
            "subProcess": true,
            "console": "internalConsole",
            "django": true,
            "env": {
                "USE_NGROK": "True"
            }
        },
        {
            "name": "Django Unittest Debug Single Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "${input:getModuleName}"
            ],
            "console": "internalConsole",
            "django": true
        },
        {
            "name": "Debug Migration",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "migrate",
            ],
            "console": "internalConsole",
            "django": true
        },
        {
            "name": "Pytest Debug Single Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.conjura-venv/bin/pytest",
            "args": [
                "-vv",
                "${file}"
            ],
            "console": "internalConsole",
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Pytest BSC Pipelines",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.conjura-venv/bin/pytest",
            "args": [
                "-vv",
                "core/tests/test_connectors/test_plaid",
                "core/tests/test_analysis/test_bank_statements"
            ],
            "console": "internalConsole",
            "django": true,
            "justMyCode": false
        },
        {
            "name": "Pytest Everything",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.conjura-venv/bin/pytest",
            "args": [
                "capital"
            ],
            "console": "internalConsole",
            "django": true,
            "justMyCode": false
        },
    ]
}
